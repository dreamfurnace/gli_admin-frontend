{
    "extends": "@tsconfig/node22/tsconfig.json",
    "include": [
        "vite.config.ts",
        "vitest.config.*",
        "cypress.config.*",
        "nightwatch.conf.*",
        "playwright.config.*"
    ],
    "compilerOptions": {
        "composite": true,
        "noEmit": false,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["node"],
        "allowJs": true,
        "outDir": "./dist"
    }
}
